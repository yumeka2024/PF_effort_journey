<table class="table table-hover text-center">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>活動者ID</th>
      <th>開始時刻</th>
      <th>終了時刻</th>
      <th>詳細</th>
      <th>編集理由</th>
      <th>作成日時</th>
    </tr>
  </thead>
  <tbody>
  <% punches.each do |punch| %>
    <tr>
      <td class="px-0"><%= link_to punch.id, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to punch.user.custom_identifier, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to punch.in_time, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to punch.out_time, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to punch.detail, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to punch.reason, admin_punch_path(punch), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0">
        <%= link_to punch.created_at.strftime('%Y/%m/%d %H:%M'), admin_punch_path(punch), class:"d-block py-1  text-dark link-underline link-underline-opacity-0" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-2 offset-5">
    <span class="">
      <%= paginate punchs, theme: 'twitter-bootstrap-4' %>
    </span>
  </div>
</div>
