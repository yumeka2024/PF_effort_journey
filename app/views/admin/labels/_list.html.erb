<table class="table table-hover text-center">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>作成者ID</th>
      <th>ジャンル</th>
      <th>ラベル名</th>
      <th>作成日時</th>
    </tr>
  </thead>
  <tbody>
  <% labels.each do |label| %>
    <tr>
      <td class="px-0"><%= link_to label.id, admin_label_path(label), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to label.user.custom_identifier, admin_label_path(label), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to label.genre_i18n, admin_label_path(label), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0"><%= link_to label.name, admin_label_path(label), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
      <td class="px-0">
        <%= link_to label.created_at.strftime('%Y/%m/%d %H:%M'), admin_label_path(label), class:"d-block py-1  text-dark link-underline link-underline-opacity-0" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-2 offset-5">
    <span class="">
      <%= paginate labels, param_name: :page_labels, theme: 'twitter-bootstrap-4' %>
    </span>
  </div>
</div>
