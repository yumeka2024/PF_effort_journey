<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="text-dark bg-light py-4 mb-0 text-center w-50">ユーザー一覧</h5>

      <div class="">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>ID</th>
              <th>カスタムID</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th>非公開</th>
              <th>退会</th>
              <th>作成日時</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                    <%= link_to user.family_name + user.first_name, admin_user_path(user) %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_active == true %>
                    <p class="text-success font-weight-bolder">有効</p>
                  <% else %>
                    <p class="text-secondary font-weight-bolder">退会</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row text-center">
          <span class="mx-auto">
            <%= paginate @users, theme: 'twitter-bootstrap-4' %>
          </span>
      </div>

    </div>

  </div>
</div>
