<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="text-dark bg-light py-3 mb-3 text-center w-25 mx-auto">ユーザー一覧</h5>

      <table class="table table-hover text-center">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>カスタムID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>非公開</th>
            <th>退会</th>
            <th>作成日時</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="px-0"><%= link_to user.id, admin_user_path(user), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
            <td class="px-0"><%= link_to user.custom_identifier, admin_user_path(user), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
            <td class="px-0"><%= link_to user.name, admin_user_path(user), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
            <td class="px-0"><%= link_to user.email, admin_user_path(user), class:"d-block py-1 text-dark link-underline link-underline-opacity-0" %></td>
            <td class="px-0">
            <%= link_to admin_user_path(user), class:"d-block py-1 link-underline link-underline-opacity-0" do %>
              <% if user.private == false %>
                <p class="text-success fw-bold p-0 m-0">公開</p>
              <% else %>
                <p class="text-danger fw-bold p-0 m-0">非公開</p>
              <% end %>
            <% end %>
            </td>
            <td class="px-0">
            <%= link_to admin_user_path(user), class:"d-block py-1 link-underline link-underline-opacity-0" do %>
              <% if user.deleted == false %>
                <p class="text-success fw-bold p-0 m-0">有効</p>
              <% else %>
                <p class="text-danger fw-bold p-0 m-0">退会</p>
              <% end %>
            <% end %>
            </td>
            <td class="px-0">
              <%= link_to user.created_at.strftime('%Y/%m/%d %H:%M'), admin_user_path(user), class:"d-block py-1  text-dark link-underline link-underline-opacity-0" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="row">
        <div class="col-2 offset-5">
          <span class="">
            <%= paginate @users, theme: 'twitter-bootstrap-4' %>
          </span>
        </div>
      </div>

    </div>
  </div>
</div>
