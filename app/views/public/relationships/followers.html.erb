<%= content_for(:left_side) do %>
  <%= render 'public/users/info', { user: @user, user_identifier: @user, approved_followers: @approved_followers, approved_following: @approved_following } %>
<% end %>


<div class="tab-btn">
  <label class="checked">フォロワー</label>
  <% if @user == current_user %>
    <% if @pending_followers.present? %>
    <div class="row mb-3 py-2 mx-auto belt rounded">
      <h5 class="text-center">フォローリクエスト</h5>
      <%= render 'public/users/list', users: @pending_followers %>
    </div>
    <% end %>
  <% end %>
  <div class="row mx-auto">
  <% if @approved_followers.present? %>
    <%= render 'public/users/list', users: @approved_followers %>
  <% else %>
    <h5 class="belt py-4 mb-0 text-center rounded">フォロワーはいません</h5>
  <% end %>
  </div>

  <label><%= link_to "フォロー中", user_following_path(@user), class: 'text-light link-underline link-underline-opacity-0 d-block' %></label>
</div>


<%= content_for(:right_side) do %>
  <%= render 'public/searches/form' %>
  <div id="search_results">
    <% if @search_results.present? %>
      <%= render 'public/searches/result' %>
    <% end %>
  </div>
<% end %>
