<!--app/views/public/relationships/_btn.html.erb-->
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <% if current_user.active_relationships.find_by(followed_id: user.id)&.approved %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "リクエストを取り下げる", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
    <% end %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>