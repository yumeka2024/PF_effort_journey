<!--app/views/public/relationships/_btn.html.erb-->
<div class="row">
  <div class="col d-flex justify-content-evenly">
    <div>
    <% if current_user.passive_relationships.exists?(follower_id: user.id, approved: true) %>
      <p class="border border-success rounded text-success p-2">フォローされています</p>
    <% else %>
      <p class="border border-secondary rounded text-secondary p-2">フォローされていません</p>
    <% end %>
    </div>
    <div>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <% if current_user.active_relationships.find_by(followed_id: user.id)&.approved %>
          <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "リクエストを取り下げる", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-danger" %>
        <% end %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success" %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col d-flex justify-content-evenly approved-btn">
    <% if current_page?(action: "followers") %>
      <% if user && current_user.followed?(user) && !user.active_relationships.find_by(followed_id: current_user.id).approved %>
        <%= link_to "承認する", user_relationships_path(user.custom_identifier), method: :patch, remote: true, class: "btn btn-success" %>
        <%= link_to "拒否する", user_relationships_path(user.custom_identifier), method: :delete, remote: true, class: "btn btn-danger" %>
      <% end %>
    <% end %>
  </div>
</div>