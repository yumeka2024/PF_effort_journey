<div class='container'>
  <div class='row'>
    <div class='col-3 border py-5'>
      <%= render 'public/users/info', { user: @user, user_identifier: @user_identifier } %>
    </div>
    <div class='col-6 border py-5'>
      <div class="row text-end">
        <%= link_to "back", root_path, class:"text-dark link-underline-dark link-offset-2-hover link-underline-opacity-0 link-underline-opacity-100-hover" %>
      </div>
      <%= link_to(user_custom_id_path(@post.user), class:"text-dark link-underline-dark link-offset-2-hover link-underline-opacity-0 link-underline-opacity-100-hover") do %>
      <div class="row">
        <div class="col-1">
          <%= image_tag @post.user.get_image(30,30), class:"rounded-circle";  %>
        </div>
        <div class="col-11 text-truncate">
          <p><%= @post.user.name %></p>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-12">
          <h5 class="text-dark bg-light py-4 mb-0 text-center"><%= @post.posted_on %>の振り返り</h5>
          <p class="p-4"><%= @post.body %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-3 text-center border-end">
          <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
        <div class="col-3 text-center border-end">
        </div>
        <div class="col-3 text-center border-end">
        </div>
        <div class="col-3 text-center mt-2">
          <% if @post.user == current_user %>
          <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"text-dark link-underline-dark link-offset-2-hover link-underline-opacity-0 link-underline-opacity-100-hover" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <%= render 'public/comments/list', comments: @comments %>
        <%= render 'public/comments/form', post: @post, comment: @comment %>
      </div>
    </div>
    <div class='col-3 border py-5'>
      <!--%= render 'public/punch/list', punch: @punch %>-->
    </div>
  </div>
</div>