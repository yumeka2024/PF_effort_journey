<%= content_for(:left_side) do %>
  <%= render 'public/users/info', { user: @user, user_identifier: @user, approved_followers: @approved_followers, approved_following: @approved_following } %>
<% end %>


<%= form_with model: @post, url: confirm_posts_path, method: :get do |f| %>
<div class="form-group mx-5 mt-5">
  <label for="inputPostedOn" class="col-form-label text-light">対象日</label>
  <%= f.date_field :posted_on, value: Time.zone.today, class:"form-control w-50 rounded", id: "inputPostedOn" %>
</div>
<div class="form-group mx-5 mt-5">
  <%= f.text_area :body, size: "40x10", class:"form-control rounded", id: "inputBody", placeholder:"良かったこと・見直したいこと・次やること"  %>
</div>
<div class="text-center">
  <%= f.submit "投稿", class: "btn btn-success mt-5" %>
</div>
<% end %>


<%= content_for(:right_side_punch) do %>
  <%= render 'public/punches/list', punches: @punches, day: @day, punch: @punch, labels: @labels, user: @user %>
<% end %>
