<style>
.card:hover{
  background: #e7e9ea;
}
</style>

<div class="card-list-containar">
  <% posts.order(created_at: :desc).each do |post| %>
  <div class="card w-100 shadow-sm m-1">
    <div class="card-body">
      <%= link_to(user_custom_id_path(post.user), class:"text-dark link-underline-dark link-offset-2-hover link-underline-opacity-0 link-underline-opacity-100-hover") do %>
      <div class="row">
        <div class="col-1">
          <%= image_tag post.user.get_image(30,30), class:"rounded-circle";  %>
        </div>
        <div class="col-11 w-75">
          <p><%= post.user.name.truncate(18) %></p>
        </div>
      </div>
      <% end %>
      <%= link_to(post_path(post), class:"text-dark link-underline link-underline-opacity-0") do %>
      <div class="row">
        <div class="col">
          <p class="card-title">
            <strong><span><%= post.posted_on %>の振り返り</span></strong>
          </p>
          <p class="card-text"><%= simple_format(h(post.body)) %></p>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col d-flex justify-content-evenly" id="like_btn_<%= post.id %>">
          <%= render "public/likes/btn", post: post %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>