<!--app/views/public/users/_info.html.erb-->
<% if user == current_user %>
<div class="row text-center my-3">
  <div class="col-lg-2 p-0 m-0 ps-1 d-flex align-items-end">
    <i class="fa-solid fa-crow fa-2x" style="color: #555555;"></i>
  </div>
  <div class="col-lg-10">
    <div class="balloon"><p><%= simple_format(h(user.score_evaluation)) %></p></div>
  </div>
</div>
<% end %>

<div class="row text-center">
  <div class="col-6 mx-auto">
  <%= image_tag user.get_image(100,100), class:"rounded-circle" %>
  </div>
  <h5 class="belt my-3 py-3 mb-0 text-center rounded"><%= user.name %></h5>
  <p><%= user.custom_identifier %></p>
  <p><%= user.introduction %></p>
  <% unless user.birthday == nil %>
    <% if user == current_user || user.private == false || current_user.approved_following?(user) %>
    <p><i class="fa-solid fa-cake-candles me-3"></i><%= user.birthday.strftime('%-m月%-d日') %></p>
    <% end %>
  <% end %>
</div>
<div class="row text-center mt-3">
  <div class="col-lg-6">
  <%= link_to approved_followers.count.to_s+"フォロワー", user_followers_path(user), class:"btn border m-1" %>
  </div>
  <div class="col-lg-6">
  <%= link_to approved_following.count.to_s+"フォロー", user_following_path(user), class:"btn border m-1" %>
  </div>
</div>
<div class="row text-center mt-5 px-3">
  <%= link_to "投稿/いいね", user_path(custom_identifier: user_identifier.custom_identifier), class:"btn border" %>
</div>
<div class="row text-center mt-3 px-3">
  <% if user == current_user %>
    <%= link_to "プロフィール編集", profile_path, class:"btn border" %>
  <% else %>
    <div id="relationship_btn_<%= user.id %>">
    <%= render "public/relationships/btn", user: user %>
    </div>
  <% end %>
</div>