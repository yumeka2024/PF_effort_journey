<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <span>
      <%= link_to(post_like_path(post), class:"text-danger link-underline link-underline-opacity-0", method: :delete, remote: true) do %>
        <i class="fa-solid fa-heart" aria-hidden="true"></i> <%= post.likes.count %>
      <% end %>
    </span>
    <% else %>
    <span>
      <%= link_to(post_like_path(post), class:"text-dark link-underline link-underline-opacity-0", method: :post, remote: true) do %>
        <i class="fa-regular fa-heart" aria-hidden="true"></i> <%= post.likes.count %>
      <% end %>
    </span>
  <% end %>
<% else %>
  <i class="fa-regular fa-heart" aria-hidden="true"></i> <%= post.likes.count %>
<% end %>