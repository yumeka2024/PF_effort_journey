<!--application.html.erb-->
<!DOCTYPE html>
<html>
  <head>
    <title>EffortJourney</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/99724ae1be.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Della+Respira&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main>

      <!--通知表示-->
      <div class='container'>
        <div class='row'>
          <div class='col-3' style="height: 0px;">
            <p class="h5 text-center text-white" id="left_notice"><%= flash[:left_notice] %></p>
          </div>
          <div class='col-6' style="height: 0px;">
            <p class="h5 text-center text-white" id="center_notice"><%= flash[:center_notice] %></p>
          </div>
          <div class='col-3' style="height: 0px;">
            <p class="h5 text-center text-white" id="right_notice"><%= flash[:right_notice] %></p>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row pt-3">
        <% if content_for?(:left_side) %>
          <div class="col-sm-3 pt-3 rounded d-none d-sm-block sidebar left_side">
            <%= yield(:left_side) %>
          </div>
          <div class="col-sm-6 pt-3">
            <%= yield %>
          </div>
          <div class="col-sm-3 pt-3 rounded d-none d-sm-block sidebar right_side">
            <%= yield(:right_side) %>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
        </div>
      </div>
    </main>

    <script>
      var jscrollOption = {
          loadingHtml: '<div class="d-flex justify-content-evenly m-2"><i class="fa-solid fa-shoe-prints" style="color: #ffebda;"></i><i class="fa-solid fa-shoe-prints" style="color: #ffebda;"></i><i class="fa-solid fa-shoe-prints" style="color: #ffebda;"></i></div>',
          autoTrigger: true,
          padding: 100,
          contentSelector: '.jscroll',
          nextSelector: 'span.next a'
      };
      $('.jscroll').jscroll(jscrollOption);
    </script>

  </body>
</html>
