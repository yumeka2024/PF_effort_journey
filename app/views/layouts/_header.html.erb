<style>
header nav {
background-color:#FFCC99
}
.btn-user{
  border: none;
  color: #ab8048;
  background: #FFF;
}
.btn-user:hover{
  border: none;
  color: #FFF;
  background: #ab8048;
}
.btn-user:active{
  border: none;
  color: #ab8048;
  background: #FFF;
}
.btn-admin{
  border: none;
  color: #FFF;
  background: #ab8048;
}
.btn-admin:hover{
  border: none;
  color: #ab8048;
  background: #FFF;
}
.btn-admin:active{
  border: none;
  color: #FFF;
  background: #ab8048;
}
.img {
  width: 90%;
}
</style>

<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="col-3 navbar-brand mt-2" href="/"><%= image_tag('title.png', class: 'img') %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class='mx-3'>
            <%= link_to "ログアウト", destroy_user_session_path, class: 'btn btn-block rounded btn-user', method: :delete %>
          </li>
          <li class='mx-3'>
            <%= link_to "About", about_path, class: 'btn btn-block rounded btn-user' %>
          </li>
        <% elsif admin_signed_in? %>
          <li class='mx-3'>
            <%= link_to "ユーザー", admin_users_path, class: 'btn btn-block rounded btn-admin' %>
          </li>
          <li class='mx-3'>
            <%= link_to "投稿", admin_posts_path, class: 'btn btn-block rounded btn-admin' %>
          </li>
          <li class='mx-3'>
            <%= link_to "コメント", admin_comments_path, class: 'btn btn-block rounded btn-admin' %>
          </li>
          <li class='mx-3'>
            <%= link_to "管理者ログアウト", destroy_admin_session_path, class: 'btn btn-block rounded btn-admin', method: :delete %>
          </li>
        <% else %>
          <li class='mx-3'>
            <%= link_to "About", about_path, class: 'btn btn-block rounded btn-user' %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>